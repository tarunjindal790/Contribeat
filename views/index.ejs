<!DOCTYPE html>
  <head>
    <title>Contributions beat</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <script src="lib/p5.js" type="text/javascript"></script>
    <script src="lib/p5.dom.min.js" type="text/javascript"></script>
    <script src="lib/p5.sound.js" type="text/javascript"></script>
    <script src="sketch.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="header">
      <p class="title comfortaa-font">CONTRIBEAT</p>
      <p class="comfortaa-font">
        Turn your github contributions graph into music!
      </p>
    </div>
    <div class="d-flex main-layout">
      <div id="leftSide" class="sidebar p-3">
        <div id="searchBar" class="input-group">
          <input
            type="text"
            name="usernameInput"
            class="form-control"
            id="usernameInput"
            placeholder="Enter a name or username..."
          />
          <div class="input-group-append">
            <button class="btn btn-dark" onclick="searchUsers()">
              <i class="fa-solid fa-search"></i>
              <!-- Search icon -->
            </button>
          </div>
        </div>

        <!-- List of possible GitHub profiles -->
        <div id="searchResults"></div>
      </div>
      <div class="content-area flex-grow-1 p-3">
        <div class="spinner-border" id="loader"></div>
        <div id="userData">
          <div id="avatarImg" class="text-center mb-3">
            <img src="" id="githubUserAvatarImg" class="img-fluid" alt="" />
          </div>
          <div id="userInfo" class="text-center">
            
          </div>
          <div id="sketchContainer"></div>
        </div>
      </div>

      <div id="rightSide" class="sidebar p-3">
        <div class="m-4">
          <button
            class="btn btn-primary"
            id="playPauseBtn"
            onclick="togglePlayPause()"
          >
            <i id="playBtn" class="fa-solid fa-play xx-large"></i>
            <i id="pauseBtn" class="fa-solid fa-pause d-none xx-large"></i>
          </button>

          <button class="btn btn-secondary" onclick="clearAll()">
            Clear all
          </button>
          <label for="bpmSlider" id="bpmSliderLabel">BPM</label>
          <input
            name="bpmSlider"
            onchange="bpmSliderChange()"
            type="range"
            id="bpmSlider"
            min="30"
            max="300"
            value="140"
          />
        </div>
        <div>
          <h2>Customize Your Pitches ðŸŽµ</h2>
          <!-- Dropdown for scale selection -->
          <label for="scaleSelect">Select a Scale:</label>
          <select id="scaleSelect" onchange="setScale(this.value)">
            <option value="major" selected>Major Scale</option>
            <option value="minor">Minor Scale</option>
            <option value="pentatonic">Pentatonic Scale</option>
            <option value="raag_yaman">Raag Yaman</option>
            <option value="custom">Custom (Manual Entry)</option>
          </select>
        </div>
        <br /><br />
        <div>
          <label for="pitchInput">Enter Pitches (comma-separated):</label>
          <input
            type="text"
            id="pitchInput"
            placeholder="e.g. 60, 62, 64"
            oninput="updatePitches(this.value)"
          />
        </div>
        <br /><br />

        <!-- Sliders for tweaking individual pitches (optional) -->
        <div id="sliders"></div>
      </div>
    </div>

      
    
  </body>
</!DOCTYPE>
